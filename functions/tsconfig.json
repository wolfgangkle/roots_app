{
  "compilerOptions": {
    "target": "ES2020",                      // ðŸ‘ˆ Use ES2020 for better async/await & modern features
    "module": "NodeNext",                    // âœ… ESM with Node
    "moduleResolution": "nodenext",          // âœ… Required for Node ESM
    "esModuleInterop": true,                 // âœ… Allows clean imports from CJS modules
    "allowSyntheticDefaultImports": true,    // âœ… Helps avoid import warnings with Firebase packages
    "strict": true,                          // âœ… Good for type safety
    "noImplicitReturns": true,               // âœ… Prevents missing return bugs
    "noUnusedLocals": true,                  // âœ… Clean code
    "sourceMap": true,                       // âœ… Helpful for debugging
    "outDir": "lib",                         // âœ… Standard out directory
    "resolveJsonModule": true,               // ðŸŸ¢ Optional but useful if importing JSON
    "forceConsistentCasingInFileNames": true // ðŸŸ¢ Avoids casing issues on Linux vs Windows
  },
  "compileOnSave": true,
  "include": ["src"]
}
